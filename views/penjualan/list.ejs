<%- include('../partials/header')%>

    <div class="card">
        <div class="card-header">
            <h1>Transaksi Penjualan</h1>
        </div>
        <table class="table table-stripped">
            <thead>
                <tr>
                    <th>No</th>
                    <th>No. Invoice</th>
                    <th>Tanggal</th>
                    <th>Total Harga</th>
                    <th>Total Bayar</th>
                    <th>Kembalian</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% rows.forEach((item, index)=> { %>
                    <tr>
                        <td>
                            <%= index + 1 %>
                        </td>
                        <td>
                            <a href="/penjualan?noInvoice=<%= item.no_invoice %>"> <%= item.no_invoice %> </a> 
                        </td>
                        <td>
                            <%= moment(item.tanggal).format('DD MMM YYYY HH:SS') %>
                        </td>
                        <td class="right-position">
                            <%= currencyFormatter.format(item.total_harga) %>
                        </td>
                        <td class="right-position">
                            <%= currencyFormatter.format(item.total_bayar) %>
                        </td>
                        <td class="right-position">
                            <%= currencyFormatter.format(item.kembalian) %>
                        </td>
                        <td>
                            <a class="btn btn-success" href="/penjualan/show/<%= item.no_invoice%>">Show</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
        
        <div class="card-body">
            <table class="table table-stripped">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Kode Barang</th>
                        <th>Nama Barang</th>
                        <th>Qty</th>
                        <th>Harga Jual</th>
                        <th>Total Harga</th>
                    </tr>
                </thead>
                <tbody>
                    <% details.forEach((item, index)=> { %>
                        <tr>
                            <td>
                                <%= index + 1 %>
                            </td>
                            <td>
                                <%= item.kode_barang %>
                            </td>
                            <td>
                                <%= item.nama_barang %>
                            </td>
                            <td class="right-position">
                                <%= item.qty %>
                            </td>
                            <td class="right-position">
                                <%= currencyFormatter.format(item.harga_jual) %>
                            </td>
                            <td class="right-position">
                                <%= currencyFormatter.format(item.total_harga) %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            <a class="btn btn-primary" href="/penjualan/add">New Transaction</a>
        </div>
    </div>

    <%- include('../partials/footer')%>